<%= form_for(resource, :as => resource_name, :html => { :class => 'form-signin'}, :url => session_path(resource_name)) do |f| %>

	<h2 class="form-signin-heading">Entrar</h2>

  <%= f.email_field :email, class: 'input-block-level', placeholder: 'Digite seu email' %>

  <%= f.password_field :password, class: 'input-block-level', placeholder: 'Digite sua senha' %>

  <% if devise_mapping.rememberable? -%>
  <label class="checkbox">
  	<%= f.check_box :remember_me %> <%= f.label :remember_me, "Lembrar minha senha" %>
	</label>
  <% end -%>

  <%= f.submit "Entrar", class: 'btn btn-primary' %>
<% end %>
